<Window x:Class="MakeupInventoryWPF.Views.AddProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MakeupInventoryWPF.Views"
        WindowStartupLocation="CenterScreen"
        Icon="../Assets/bibianoico.ico"
        mc:Ignorable="d"
                Title="Agregar Producto" Height="430" Width="400">
    <Grid Margin="20" >
        <StackPanel>
            <TextBlock Text="Nombre del Producto"/>
            <TextBox Name="NameBox"/>
            <TextBlock Text="SKU (6 dígitos)" Margin="0,10,0,0"/>
            <TextBox Name="SkuBox"/>
            <TextBlock Text="Descripción" Margin="0,10,0,0"/>
            <TextBox Name="DescriptionBox"/>
            <TextBlock Text="Stock Actual" Margin="0,10,0,0"/>
            <TextBox Name="StockBox"/>
            <TextBlock Text="Stock Mínimo" Margin="0,10,0,0"/>
            <TextBox Name="MinStockBox"/>
            <TextBlock Text="Stock Máximo" Margin="0,10,0,0"/>
            <TextBox Name="MaxStockBox"/>
            <Button Content="Guardar" Margin="0,20,0,0" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>